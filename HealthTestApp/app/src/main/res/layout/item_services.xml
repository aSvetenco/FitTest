<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_14_dp">

    <ImageView
        android:id="@+id/service_icon"
        android:layout_width="@dimen/service_icon_width"
        android:layout_height="@dimen/service_icon_height"
        android:layout_marginStart="@dimen/spacing_16_dp" />

    <TextView
        android:id="@+id/service_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_14_dp"
        android:layout_weight="1"
        android:maxWidth="80dp"
        android:text="@string/app_name" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/connection_switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_16_dp"
        android:textOff="@string/off"
        android:textOn="@string/on" />

</LinearLayout>