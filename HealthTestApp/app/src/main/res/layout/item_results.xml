<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/spacing_14_dp"
        android:drawableStart="@drawable/ic_shoes"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_14_dp"
        android:text="@string/results_template" />
    <ImageView
        android:id="@+id/resource"
        android:layout_width="@dimen/service_icon_width"
        android:layout_height="@dimen/service_icon_height"
        android:layout_marginEnd="@dimen/spacing_20_dp"
        android:layout_marginTop="-20dp"
        android:layout_below="@+id/steps"
        android:layout_alignParentEnd="true" />
    </RelativeLayout>